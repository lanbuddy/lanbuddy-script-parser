{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "test/**/*.ts",
    "node_modules",
    "dist"
  ]
}